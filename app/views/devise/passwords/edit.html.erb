<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <p>
        <%= f.label :reset_password_token, "Reset Password" %>
        <%= f.password_field :reset_password_token, as: :hidden %>
        
        <%= f.full_error :reset_password_token %>
    </p>    
    <p>
      <%= f.label :password, "New Password" %>
      <%= f.password_field :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    </p>
    <p>
      <%= f.label :password_confirmation, "Re-enter Password" %>
      <%= f.password_field :password_confirmation, label: "Confirm your new password", required: true %>
    </p>
    <p><%= f.button :submit, "Change my password" %></p>
  
<% end %>

<%= render "devise/shared/links" %>
